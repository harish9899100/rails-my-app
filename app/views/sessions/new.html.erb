<h1>Login</h1>

<%= form_with url: sessions_path, method: :post, local: true do %>
  
  <div>
    <label>Email</label><br>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div>
    <label>Password</label><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>

<% end %>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>
